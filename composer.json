{
  "name": "dracula/dracula-wordpress",
  "description": "A WordPress plugin that brings Dracula color schema to WP dashboard",
  "type": "wordpress-plugin",
  "license": "MIT license",
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^2.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "lint": "vendor/bin/phpcs --extensions=php --standard=WordPress dracula-wordpress.php ./dracula-custom-admin-color-schemes/class-dracula-wordpress-custom-color-schemes.php",
    "lint-fix": "vendor/bin/phpcbf --extensions=php --standard=WordPress dracula-wordpress.php ./dracula-custom-admin-color-schemes/class-dracula-wordpress-custom-color-schemes.php",
    "cs:fix-filtered": [
      "NelsonMartell\\PhpCodeSniffer\\ComposerScripts::phpcbf"
    ]
  },
  "require": {
    "nelson6e65/code-sniffer-helpers": "^1.0"
  }
}
